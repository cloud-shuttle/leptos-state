{
  "name": "leptos-state-consultancy",
  "version": "1.0.0",
  "description": "Data engineering consultancy specializing in Rust and Leptos",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "install": "pnpm install --frozen-lockfile",
    "build": "pnpm run build:css && pnpm run build:wasm",
    "build:css": "sass src/style/main.scss src/style/main.css",
    "build:wasm": "wasm-pack build --target web --out-dir pkg",
    "dev": "concurrently \"pnpm run watch:css\" \"pnpm run serve\"",
    "watch:css": "sass --watch src/style/main.scss:src/style/main.css",
    "serve": "python3 -m http.server 8080",
    "test": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "test:unit": "cargo test",
    "test:integration": "cargo test --test integration",
    "test:web": "playwright test",
    "test:web:ui": "playwright test --ui",
    "test:web:headed": "playwright test --headed",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "pnpm run test && pnpm run test:e2e",
    "test:watch": "playwright test --watch",
    "install:browsers": "playwright install",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "update": "pnpm update",
    "update:interactive": "pnpm update --interactive",
    "clean": "pnpm run clean:node && pnpm run clean:cargo",
    "clean:node": "rm -rf node_modules && rm -f pnpm-lock.yaml",
    "clean:cargo": "cargo clean",
    "lint": "pnpm run lint:rust && pnpm run lint:js",
    "lint:rust": "cargo clippy --all-targets --all-features -- -D warnings",
    "lint:js": "eslint . --ext .js,.ts,.jsx,.tsx",
    "format": "pnpm run format:rust && pnpm run format:js",
    "format:rust": "cargo fmt --all",
    "format:js": "prettier --write .",
    "coverage": "pnpm run coverage:rust && pnpm run coverage:js",
    "coverage:rust": "cargo tarpaulin --out Html --output-dir coverage/rust",
    "coverage:js": "nyc pnpm run test:e2e",
    "security": "pnpm run security:audit && pnpm run security:cargo",
    "security:audit": "pnpm audit",
    "security:cargo": "cargo audit",
    "benchmark": "cargo bench",
    "benchmark:report": "cargo bench -- --output-format html --output-dir benchmark-reports",
    "docs": "pnpm run docs:rust && pnpm run docs:js",
    "docs:rust": "cargo doc --no-deps --open",
    "docs:js": "typedoc --out docs/js",
    "release": "pnpm run release:check && pnpm run release:build && pnpm run release:publish",
    "release:check": "pnpm run test && pnpm run lint && pnpm run security",
    "release:build": "pnpm run build && pnpm run docs",
    "release:publish": "cargo publish"
  },
  "devDependencies": {
    "sass": "^1.69.5",
    "concurrently": "^8.2.2",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typedoc": "^0.25.4",
    "nyc": "^15.1.0"
  },
  "keywords": [
    "rust",
    "leptos",
    "data-engineering",
    "wasm",
    "webassembly",
    "consultancy",
    "state-management"
  ],
  "author": "Data Engineering Pro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/data-engineering-pro/leptos-state.git"
  },
  "bugs": {
    "url": "https://github.com/data-engineering-pro/leptos-state/issues"
  },
  "homepage": "https://dataengineeringpro.com"
}